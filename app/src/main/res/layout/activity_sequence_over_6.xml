<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SpeechPracticeActivity">

    <ImageView
        android:id="@+id/topGameImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/activity_sequence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottom_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/white_bottom_bg"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topGameImage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Can you put the steps in order?"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Option 1: Eat Breakfast -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button_background"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Eat Breakfast"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/volume"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Sound icon"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Option 2: Go to School -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button_background"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Go to School"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/volume"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Sound icon"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Option 3: Wake Up -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button_background"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wake Up"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/volume"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Sound icon"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Option 4: Wash Face -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button_background"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wash Face"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/volume"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Sound icon"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Option 5: Brush Teeth -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button_background"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Brush Teeth"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/volume"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Sound icon"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>