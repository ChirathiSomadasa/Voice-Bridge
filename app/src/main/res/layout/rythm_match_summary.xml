<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".MainActivity">

    <!-- Green Header with Panda and Word -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#A9E5BB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/wordTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Boat"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <ImageView
            android:id="@+id/pandaImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/panda"
            android:contentDescription="Panda Mascot"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Car Option -->
    <ImageButton
        android:id="@+id/carImage"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:padding="12dp"
        android:src="@drawable/car"
        android:contentDescription="Car"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Plane Option -->
    <ImageButton
        android:id="@+id/planeImage"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:padding="12dp"
        android:src="@drawable/plane"
        android:contentDescription="Plane"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/carImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Boat Option -->
    <ImageButton
        android:id="@+id/boatImage"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:padding="12dp"
        android:src="@drawable/boat"
        android:contentDescription="Boat"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/planeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
