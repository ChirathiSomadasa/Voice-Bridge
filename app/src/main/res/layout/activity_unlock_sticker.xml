<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".UnlockStickerActivity">

    <!-- Particles Container -->
    <FrameLayout
        android:id="@+id/particlesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <!-- Gift Box -->
    <ImageView
        android:id="@+id/giftBox"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:src="@drawable/gift_box"
        android:visibility="invisible" />

    <!-- Sticker Reveal -->
    <ImageView
        android:id="@+id/stickerReveal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:elevation="20dp"
        android:src="@drawable/sticker"
        android:visibility="invisible" />

    <!-- Unlocked Text -->
    <TextView
        android:id="@+id/unlockedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:elevation="15dp"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="NEW STICKER UNLOCKED!"
        android:textColor="@color/gold"
        android:textSize="28sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <!-- Collect Button -->
    <Button
        android:id="@+id/collectButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_collect_gradient"
        android:elevation="10dp"
        android:text="COLLECT"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="500dp"
        android:elevation="15dp"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="Collect 2 More to \nUnlock New Routine!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</FrameLayout>