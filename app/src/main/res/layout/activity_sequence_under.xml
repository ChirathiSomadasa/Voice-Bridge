<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ActivitySequenceUnderActivity">

    <ImageView
        android:id="@+id/topGameImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/activity_sequence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottom_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/white_bottom_bg"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topGameImage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Can you put the steps in order?"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Container to center all buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Morning Routine (Clickable) -->
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_button_background"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/brushing"
                        android:scaleType="centerInside" />
                </LinearLayout>

                <!-- Local-Time Routine (Locked) -->
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_button_background"
                    android:padding="8dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginBottom="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/meal_time"
                        android:scaleType="centerInside" />
                </LinearLayout>

                <!-- School Routine (Locked) -->
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_button_background"
                    android:padding="8dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginBottom="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/morning"
                        android:scaleType="centerInside" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>