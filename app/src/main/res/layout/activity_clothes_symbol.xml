<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClothesSymbolActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/back_button"
        app:srcCompat="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_bottom_bg"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/snackTitle"
                android:layout_width="281dp"
                android:layout_height="40dp"
                android:lineSpacingExtra="4dp"
                android:text="Clothes"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="28sp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold" />

            <!-- Grid Layout for Buttons -->
            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:rowCount="5"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true">

                <LinearLayout
                    android:layout_width="8dp"
                    android:layout_height="127dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_green_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imgTShirt"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="TShirt"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/tshirt"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="T shirt"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="8dp"
                    android:layout_height="127dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_green_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imgShirt"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="Shirt"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/shirt"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Shirt"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="8dp"
                    android:layout_height="127dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_green_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imgTrouser"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="Trouser"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/jeans"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Trouser"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="8dp"
                    android:layout_height="127dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_green_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imgFrock"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="Frock"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/frock"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Frock"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="8dp"
                    android:layout_height="127dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_green_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imgShort"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="Short"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/shorts"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Short"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="8dp"
                    android:layout_height="127dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_green_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imgRainCoat"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="RainCoat"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/raincoat"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="RainCoat"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="8dp"
                    android:layout_height="127dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_green_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imgSkirt"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="Skirt"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/skirt"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Skirt"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="8dp"
                    android:layout_height="127dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_green_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imgBlouse"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="Blouse"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/blouse"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Blouse"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="8dp"
                    android:layout_height="127dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_green_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imgNightSuit"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="NightSuit"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/night_Suit"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Pyjama"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="8dp"
                    android:layout_height="127dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_green_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imgVest"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="Vest"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/vest"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Vest"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="8dp"
                    android:layout_height="127dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_green_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imgSlippers"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="Slippers"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/slippers"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Slippers"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </GridLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>