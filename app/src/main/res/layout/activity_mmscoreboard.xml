<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scoreboard_bg"
    tools:context=".MMScoreboardActivity">

    <!-- Remove ScrollView since we want fixed positioning -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Stars above "YOU WON" text -->

        <ImageView
            android:id="@+id/starLeft"
            android:layout_width="62dp"
            android:layout_height="55dp"
            android:layout_marginTop="88dp"
            android:src="@drawable/star_outline"
            app:layout_constraintEnd_toStartOf="@+id/starMiddle"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/starMiddle"
            android:layout_width="100dp"
            android:layout_height="92dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/star_outline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/starRight"
            android:layout_width="63dp"
            android:layout_height="54dp"
            android:layout_marginTop="88dp"
            android:src="@drawable/star_outline"
            app:layout_constraintStart_toEndOf="@+id/starMiddle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleWon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="144dp"
            android:text="YOU WON"
            android:textColor="#E4D00A"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scoreValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Your Score"
            android:textColor="#333333"
            android:textSize="43sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleWon" />

        <TextView
            android:id="@+id/scoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="40"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scoreValue" />

        <!-- Buttons Container - Fixed at center -->

        <!-- Unlock Gift Card - Fixed at bottom -->

        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:orientation="vertical"
            android:spacing="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btnUnlockGift"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scoreLabel"
            app:layout_constraintVertical_bias="0.098"
            app:layout_constraintVertical_chainStyle="packed">

            <!-- Play Again Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlayAgain"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:backgroundTint="#4CAF50"
                android:elevation="6dp"
                android:padding="0dp"
                android:text="Replay"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Home Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDashboard"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:backgroundTint="#2196F3"
                android:elevation="6dp"
                android:padding="0dp"
                android:text="Home"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnUnlockGift"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_marginBottom="80dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="35dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <!-- Gift Box Icon -->
                <ImageView
                    android:id="@+id/giftBoxIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/giftbox" />

                <!-- Gift Text -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="Unlock Your Gift"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Performance Text (Optional - Add this if you want to show performance) -->
        <TextView
            android:id="@+id/performanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scoreLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>